<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300dp"
    android:layout_height="wrap_content"
    android:background="#EEE"
    app:cardBackgroundColor="#EEE"
    app:cardCornerRadius="@dimen/_5dp"
    app:contentPaddingLeft="@dimen/_7dp"
    app:contentPaddingRight="@dimen/_7dp"
    app:contentPaddingTop="@dimen/_20dp"
    app:contentPaddingBottom="@dimen/_20dp"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Avatar"
            android:gravity="center"
            android:textSize="@dimen/_17dp"
            android:textColor="#1F1F1F"
            android:textStyle="bold"

            />
        <android.widget.TextView
            android:id="@+id/viewDialogLogin_tvCamera"
            android:layout_marginTop="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:text="Camera"
            />
        <TextView
            android:id="@+id/viewDialogLogin_tvDirectory"
            android:layout_marginTop="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Open an directory"
            android:gravity="center"
            android:background="#fff"
            />

        <TextView
            android:id="@+id/viewDialogLogin_tvExit"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="@dimen/_15dp"
            android:textColor="#009688"
            android:layout_gravity="end"

            />
    </LinearLayout>

</android.support.v7.widget.CardView>