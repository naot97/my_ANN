<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="200dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#00aab7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_avatar"
                    android:layout_width="@dimen/_100dp"
                    android:layout_height="@dimen/_100dp"
                    android:layout_margin="@dimen/drawer_cv_photo_margin"
                    app:cardCornerRadius="50dp"
                    >
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/reviewer_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        fresco:fadeDuration="300"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:placeholderImage="@drawable/placeholder_300x300"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="-35dp"
                    app:cardBackgroundColor="#ffffff"
                    app:contentPadding="2dp"
                    app:cardCornerRadius="5dp"
                    >
                <ImageView
                    android:id="@+id/img_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/masculine"
                    android:scaleType="centerCrop"
                    />

                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/reviewer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/drawer_cv_name_size"
                        android:textColor="#003d60"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/reviewer_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#003d60"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"

                        />
                    <TextView
                        android:id="@+id/reviewer_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#003d60"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"

                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>